{
  "$schema": "https://json.schemastore.org/prettierrc",
  "printWidth": 90,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "es5",
  "quoteProps": "preserve",
  "arrowParens": "avoid",
  "tabWidth": 2,
  "semi": true,
  "endOfLine": "auto",
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-astro"],
  "overrides": [
    {
      "files": ["*.md", "*.mdc"],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ]
}
